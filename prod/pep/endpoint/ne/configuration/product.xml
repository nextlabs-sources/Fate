<!-- Network Enforcer Control Center Configuration -->

<!-- HTTP Header Injection -->
<Obligation>
  <DisplayName>HTTP Header Injection</DisplayName>
  <RunAt>PEP</RunAt>
  <Name>HTTP_HEADER_INJECTION</Name>
  <Arguments>
    <Argument usereditable="true">
      <Name>Field_Key</Name>
    </Argument> 
    <Argument usereditable="true">
      <Name>Field_Value</Name>
    </Argument>
    <Argument usereditable="false" hidden="true">
      <Name>LogId</Name>
      <Value default="true">$CELogUid</Value>
    </Argument> 
  </Arguments>
</Obligation>

<!-- HTTP Redirection -->
<Obligation>
  <DisplayName>HTTP Redirect</DisplayName>
  <RunAt>PEP</RunAt>
  <Name>HTTP_REDIRECT</Name>
  <Arguments>
    <Argument usereditable="true">
      <Name>Redirect_URL</Name>
    </Argument> 
  </Arguments>
</Obligation>

